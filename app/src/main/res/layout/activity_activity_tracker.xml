<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context=".tracker.activitytracker.ActivityTrackerActivity"
    android:id="@+id/activityTrackerContainer">

    <RelativeLayout
        android:id="@+id/activityTrackerHeader"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:background="#ffebf0f2">

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/textViewCurrent"
            android:layout_toLeftOf="@+id/textViewGoal"
            android:layout_toStartOf="@+id/textViewGoal"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="Current" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/textViewGoal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="Goal" />

    </RelativeLayout>

    <!--
    <ListView
        android:id="@+id/listViewActivityTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_marginTop="132dp">
    </ListView>
    -->

    <ScrollView
        android:id="@+id/scrollViewActivityTracker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_marginTop="132dp">

        <LinearLayout
            android:id="@+id/linearLayoutActivityTracker"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
