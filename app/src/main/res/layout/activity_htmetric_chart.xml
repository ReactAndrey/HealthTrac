<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ht_white"
    tools:context=".tracker.HTMetricChartActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:id="@+id/chartLayout"
                android:background="@color/ht_white"
                android:paddingTop="22dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:id="@+id/yAxisLayout"
                    android:orientation="vertical"
                    android:layout_width="33dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/yAxisLabel1"
                        android:textSize="9sp"
                        android:gravity="center_vertical|left"
                        android:textColor="#363738" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/yAxisLabel2"
                        android:gravity="center_vertical|left"
                        android:textSize="9sp"
                        android:layout_marginTop="28dp"
                        android:textColor="#363738" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/yAxisLabel3"
                        android:gravity="center_vertical|left"
                        android:textSize="9sp"
                        android:layout_marginTop="28dp"
                        android:textColor="#363738" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/yAxisLabel4"
                        android:gravity="center_vertical|left"
                        android:textSize="9sp"
                        android:layout_marginTop="28dp"
                        android:textColor="#363738" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/yAxisLabel5"
                        android:gravity="center_vertical|left"
                        android:textSize="9sp"
                        android:layout_marginTop="28dp"
                        android:textColor="#363738" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="48dp"
                    android:background="#ecf1f3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="58dp"
                    android:layout_marginLeft="48dp"
                    android:background="#ecf1f3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="106dp"
                    android:layout_marginLeft="48dp"
                    android:background="#ecf1f3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="154dp"
                    android:layout_marginLeft="48dp"
                    android:background="#ecf1f3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="202dp"
                    android:layout_marginLeft="48dp"
                    android:background="#686c6e"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="205dp"
                    android:layout_marginLeft="48dp"
                    android:id="@+id/xAxisLabelLayout1"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="205dp"
                    android:layout_marginLeft="48dp"
                    android:id="@+id/xAxisLabelLayout2"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="205dp"
                    android:layout_marginLeft="48dp"
                    android:id="@+id/xAxisLabelLayout3"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="205dp"
                    android:layout_marginLeft="48dp"
                    android:id="@+id/xAxisLabelLayout4"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/chartContentLayout1"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/chartContentLayout2"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/chartContentLayout3"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:id="@+id/chartContentLayout4"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/targetMetricIndicatorLayout"
                    android:layout_marginLeft="11.5dp">

                    <RelativeLayout
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:id="@+id/targetMetricBtn">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ht_arrow_target_calories"
                            android:layout_centerInParent="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/targetMetricLabel"
                            android:textColor="#ffffff"
                            android:textSize="9sp"
                            android:lines="1"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3.5dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3.5dp"
                        android:background="#d7d8d8"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </FrameLayout>
            <View
                android:id="@+id/viewGraySeparator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffd9e3e7"
                android:layout_gravity="center_vertical" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="74dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:id="@+id/averageView"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:id="@+id/averageValueView"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textColor="#2c2d2e"
                        android:textSize="22sp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average"
                        android:id="@+id/averageLabelView"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/ht_blue"
                        android:textSize="11sp"
                        android:layout_marginTop="3dp" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:id="@+id/highestView"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:id="@+id/highestValueView"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textColor="#2c2d2e"
                        android:textSize="22sp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/highest"
                        android:id="@+id/highestLabelView"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/ht_blue"
                        android:textSize="11sp"
                        android:layout_marginTop="3dp" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:id="@+id/totalView"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="26dp"
                        android:id="@+id/totalValueView"
                        android:gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textColor="#2c2d2e"
                        android:textSize="22sp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalstr"
                        android:id="@+id/totalLabelView"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/ht_blue"
                        android:textSize="11sp"
                        android:layout_marginTop="3dp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@color/ht_white">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:id="@+id/oneWeekBtn"
                    android:layout_weight="0.1"
                    android:background="#f5f8f9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:text="1W"
                        android:textColor="@color/ht_gray_title_text"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:id="@+id/oneWeekLabel" />
                    <View
                        android:id="@+id/oneWeekIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ff74ccf0"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:id="@+id/twoWeeksBtn"
                    android:layout_weight="0.1"
                    android:background="#f5f8f9">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:text="2W"
                        android:textColor="@color/ht_gray_title_text"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:id="@+id/twoWeeksLabel" />
                    <View
                        android:id="@+id/twoWeeksIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ff74ccf0"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:id="@+id/oneMonthBtn"
                    android:layout_weight="0.1"
                    android:background="#f5f8f9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:text="1M"
                        android:textColor="@color/ht_gray_title_text"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:id="@+id/oneMonthLabel" />
                    <View
                        android:id="@+id/oneMonthIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ff74ccf0"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:id="@+id/threeMonthsBtn"
                    android:layout_weight="0.1"
                    android:background="#f5f8f9">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:text="3M"
                        android:textColor="@color/ht_gray_title_text"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:id="@+id/threeMonthsLabel" />
                    <View
                        android:id="@+id/threeMonthsIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ff74ccf0"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/metricHistoryLayout"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
