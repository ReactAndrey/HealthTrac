<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/ht_white"
    android:minHeight="66dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:id="@+id/searchResultCell">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/typeImageView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/typeLabelView"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/typeImageView"
            android:layout_toEndOf="@+id/typeImageView"
            android:textSize="16sp"
            android:textColor="@color/ht_gray_title_text"
            android:singleLine="true"
            android:ellipsize="end" />
    </RelativeLayout>

    <View
        android:id="@+id/viewGraySeparator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffebf0f2"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true" />

</RelativeLayout>