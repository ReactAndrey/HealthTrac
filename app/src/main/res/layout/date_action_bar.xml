<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#ffffffff" >

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/ht_blue" />

    <ImageView
        android:id="@+id/leftArrowAction"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="center"
        style="?android:attr/borderlessButtonStyle"
        android:contentDescription="leftArrowAction"
        android:src="@drawable/ht_arrow_left_gray" />

    <ImageView
        android:id="@+id/rightArrowAction"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        style="?android:attr/borderlessButtonStyle"
        android:contentDescription="rightArrowAction"
        android:src="@drawable/ht_arrow_right_gray"/>

    <View
        android:id="@+id/viewGraySeparatorAction"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#ffebf0f2" />

</RelativeLayout>