<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#ffffffff"
    android:layout_marginTop="44dp">

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/ht_blue" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="center"
        style="?android:attr/borderlessButtonStyle"
        android:contentDescription="leftArrow"

        android:src="@drawable/ht_arrow_left_gray" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="center"
        style="?android:attr/borderlessButtonStyle"
        android:contentDescription="rightArrow"
        android:src="@drawable/ht_arrow_right_gray"/>

    <View
        android:id="@+id/viewGraySeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#ffd7e2e6" />

</RelativeLayout>