<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/ht_white"
    android:minHeight="54dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:id="@+id/deviceValueCell">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deviceActiveLabelView"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#2e2e2e"
            android:lines="1"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/deviceActiveCheck"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ht_check_off_green"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:id="@+id/viewGraySeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffebf0f2"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>