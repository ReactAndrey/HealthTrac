<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remindersRow">

        <TextView
            android:id="@+id/textViewRemindersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/editTextReminder"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ht_text_field"
            android:gravity="center_vertical|end" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewRadioYesterday"
            android:layout_toRightOf="@+id/textViewRemindersLabel"
            android:src="@drawable/ht_color_button_green_off"
            android:scaleType="center" />

        <TextView
            android:id="@+id/textViewYesterdayLabel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/imageViewRadioYesterday"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewRadioToday"
            android:layout_toRightOf="@+id/textViewYesterdayLabel"
            android:src="@drawable/ht_color_button_green_off"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/textViewTodayLabel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toRightOf="@+id/imageViewRadioToday"
            android:gravity="center_vertical"
            android:src="@drawable/ht_color_button_green_off" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageViewReminderCheck"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <View
            android:id="@+id/viewGraySeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#ffd7e2e6" />

    </RelativeLayout>

</RelativeLayout>