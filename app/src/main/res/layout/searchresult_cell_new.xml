<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/ht_white"
    android:minHeight="44dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:id="@+id/searchResultCell">

        <TextView
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:id="@+id/quantityEdit"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ht_text_field"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/ht_gray_title_text"
            android:gravity="center_vertical|right" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/quantityEdit"
            android:layout_toEndOf="@+id/quantityEdit"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/foodTitleView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13sp"
                android:textColor="#2e2e2e" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/foodSubTitleView"
                android:layout_below="@+id/foodTitleView"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="11sp"
                android:textColor="#692e2e2e"
                android:layout_marginTop="-5dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/viewGraySeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7e2e6"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp" />

</RelativeLayout>