<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:id="@+id/setAGoalRow">

        <ImageView
            android:id="@+id/imageViewSetAGoalReminderIcon"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ht_reminder"
            android:scaleType="center"
            android:contentDescription="setAGoalReminder" />

        <TextView
            android:id="@+id/textViewSetAGoalLabel"
            android:layout_width="112dp"
            android:layout_height="72dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/imageViewSetAGoalReminderIcon"
            android:layout_toEndOf="@+id/imageViewSetAGoalReminderIcon"
            android:gravity="center_vertical"
            android:text="" />

        <EditText
            android:layout_width="144dp"
            android:layout_height="31dp"
            android:inputType="textCapSentences"
            android:id="@+id/editTextSetAGoal"
            android:layout_marginTop="20.5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ht_text_field"
            android:gravity="center_vertical|end" />

        <View
            android:id="@+id/viewGraySeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#ffd7e2e6" />

    </RelativeLayout>

</RelativeLayout>